@using System.Data;
@using Autravel.Extentions;
@using Autravel.Models.Function;
@{
    var CamNang = (DataTable)ViewBag.CamNang;
}

@model DataRow


<style>
    b {
        color: black;
    }

    .titel {
        color: #555;
    }

    .titel-combo {
        margin: 10px 0 20px 0
    }
</style>
@helper itemPanel(string txt, DataTable source)
{
    <div class="container" style="margin-top:70px">
        <div class="Hanbook">
            <div class="container">
                <div class="headingContent">
                    <h4 class="heading">@txt</h4>
                </div>
                <div class="body-content-Combo">
                    @foreach (DataRow item in source.Rows)
                    {
                        <a href="/CamNang/chitiet?ID=@item["Post_id"]">
                            <div class="col-md-3 combo-item">
                                <div class="div-img-combo">
                                    <img class="img-combo" src="@item["Post_Images"]" />
                                </div>
                                <div class="titel-combo">
                                    <span class="titel">Ẩm thực</span>
                                    <b class="description-combo">@item["Post_Tile"]</b>
                                </div>
                            </div>
                        </a>

                    }
                </div>
            </div>


        </div>
    </div>
}
@itemPanel("Điểm đến hấp dẫn tại " + Model["Location_Name"], CamNang)